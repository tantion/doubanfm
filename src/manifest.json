{
    "manifest_version": 2,

    "name": "Douban Fm Improve",
    "description": "This extension is for improving douban.fm",
    "version": "0.6.0",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://douban.fm/",
        "http://music.douban.com/"
     ],
    "icons": {
        "128": "icon.png",
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png"
    },
    "web_accessible_resources": [
        "config.js",
        "seajs/*.js",
        "js/*.js",
        "lib/*.js"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["http://douban.fm/*"],
        "css":     ["doubanfm.css"],
        "js":      ["doubanfm.js"],
        "run_at":  "document_end"
    }]
}
