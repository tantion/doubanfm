{
    "manifest_version": 2,

    "name": "豆瓣FM音乐助手",
    "description": "让豆瓣FM支持下载歌曲和封面图片，可以播放红心、专辑、节目中的歌曲以及搜索歌曲。",
    "version": "1.8.0",

    "permissions": [
        "<all_urls>",
        "clipboardWrite",
        "tabs",
        "webNavigation",
        "cookies",
        "downloads"
     ],
    "icons": {
        "128": "icon.png",
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png"
    },
    "web_accessible_resources": [
        "inject/*.*",
        "images/*.*",
        "*.html"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [{
        "matches": ["http://douban.fm/*", "http://music.douban.com/*"],
        "css":     ["bootstrap.css"],
        "js":      ["bootstrap.js"],
        "run_at":  "document_end"
    }]
}
